
@{
    ViewBag.Title = "Регистрация";
}

<md-card layout-align="center center">
  <md-card-content>
    <div ng-controller="LoginController">
      <form name="form" role="form">
        <span class="help-block">{{login.Message}}</span>
        
        <div class="form-group">
          <label for="username">Ваше имя</label>
          <input type="text" name="username" class="form-control" ng-model="login.Name" required />
        </div>

        <div class="form-group">
          <label for="username">Логин</label>
          <input type="text" name="loginname" class="form-control" ng-model="login.Login" required />
        </div>

        <div class="form-group">
          <label for="password">Пароль</label>
          <input type="password" name="password" class="form-control" ng-model="login.Password" required />
        </div>

        <div class="form-group">
          <label for="password">Подтверждение пароля</label>
          <input type="password" name="confirmpassword" class="form-control" ng-model="login.ConfirmPassword" required />
        </div>

        <div class="form-actions">
          <md-button ng-disabled="form.$invalid" ng-click="Register(login)">Регистрация</md-button>
        </div>

</form>
    </div>
  </md-card-content>
</md-card>

